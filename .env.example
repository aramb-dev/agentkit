# Google Gemini API Configuration
GOOGLE_API_KEY=your_gemini_api_key_here

# Tavily API for Web Search
TAVILY_API_KEY=your_tavily_api_key_here

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB default (52428800 bytes)

# Conversation Settings
CONVERSATION_HISTORY_LIMIT=50  # Messages to keep in memory

# Error Handling Configuration
ENABLE_RETRY_LOGIC=true  # Enable automatic retry for transient failures
MAX_RETRY_ATTEMPTS=3  # Maximum number of retry attempts
RETRY_DELAY_SECONDS=1  # Initial delay between retries (exponential backoff)